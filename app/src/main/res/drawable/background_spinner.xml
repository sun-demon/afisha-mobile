<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black_to_gray" />
            <stroke
                android:width="3dp"
                android:color="@color/gray_to_black" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item
        android:id="@+id/arrow_layer"
        android:right="8dp"
        android:gravity="end|center_vertical"
        android:drawable="@drawable/icon_arrow_down_white"/>
</layer-list>